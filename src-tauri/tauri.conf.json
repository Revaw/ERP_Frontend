{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Revaw ERP",
  "version": "0.1.1",
  "identifier": "com.revaw.erp",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Revaw ERP",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Revaw/ERP_Frontend/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "AKUldSUU9VWG9TVjBHY2M1SnZMS0FETWQ2MjBwL0dXU0ppbGFTUW9hdWlkS0xZNm5Tbi9PSDBBcVcK"
    }
  }
}
